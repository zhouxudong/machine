extends layout

block content
  #page
    #header
      img(src="/statics/images/logo.png")
    #content.clearfix
      #nav_section_top
        ul.fist_level.clearfix
          li ABOUT US
          li PRODUCTS
            div.category
              ul.second_level
                each category,i in categorys
                  if(lg == "en")
                    li #{category.name_en}
                  else if(lg == 'es')
                    li #{category.name_es}
                  else
                    li #{category.name}

          li NEWS
          li SOLUTION
          li CONTACT US
      #banner
        img(src="/statics/images/2.jpg")
      #nav_section_left
        ul
          each category,i in categorys
            - var isFirst = i == 0;
            - var lang = lg == "en" ? "name_en" : (lg == "es" ? "name_es" : "name");
            li(data-id="#{category.id}" class=isFirst ? "active":"") #{category[lang]}
      #main
        img(src="/statics/images/bq_products.png")
        .productList
          each product,i in products
            .item
              .bg_over
                a(target="_blank" href="/product/#{product.id}")
                  img(src="http://bestchinamachine.net:3000#{product.thumb}" width="180px" height="135px")
                if(lg == "en")
                  p #{product.name_en}
                else if(lg == "es")
                  p #{product.name_es}
                else
                  p #{product.name}
                //.imgGroup
                //  .absBg
                //  .retBg
                //    img(src="http://47.89.186.41#{product.thumb}" width="180px" height="135px")
                //if(lg == "en")
                //  p #{product.name_en}
                //else if(lg == "es")
                //  p #{product.name_es}
                //else
                //  p #{product.name}
  input(type='hidden' id="currLg" value="#{lg}")
  script(src="/statics/API.js")
  script(src="/statics/js/index.js")
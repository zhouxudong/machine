extends layout

block content
  #page
    #header
      img(src="/statics/images/logo.png")
    #content.clearfix
      #nav_section_top
        ul.fist_level.clearfix
          li ABOUT US
          li PRODUCTS
            div.category
              ul.second_level
                each category,i in categorys
                  if(lg == "en")
                    li #{category.name_en}
                  else if(lg == 'es')
                    li #{category.name_es}
                  else
                    li #{category.name}
                li 吹膜机
                  div.subCategory
                    div
                      a(href="#") 农膜
                      a(href='#') 地膜
                li 流毛机
                  div.subCategory
                    div
                      a(href="#") 缠绕膜
                      a(href='#') PVC保鲜膜
                li 制袋机
                  div.subCategory
                    div
                      a(href="#") 复合膜制袋机
                      a(href='#') 热边封制袋机

          li NEWS
          li SOLUTION
          li CONTACT US
      #banner
        img(src="/statics/images/2.jpg")
      #nav_section_left
        ul
          each category,i in categorys
            if(lg == "en")
              li #{category.name_en}
            else if(lg == 'es')
              li #{category.name_es}
            else
              li #{category.name}
      #main
        img(src="/statics/images/bq_products.png")
        .productList
          each product,i in products
            .item
              .bg_over
                img(src="#{"http://47.89.186.41" + product.thumb}")
                p #{product.name}
          .item
            .bg_over
              img(src="/statics/images/1-1.jpg")
              p CATL-520 Automatic Laminating Machine
          .item
            .bg_over
              img(src="/statics/images/1-1.jpg")
              p CATL-520 Automatic Laminating Machine


extends layout

block content
  #page
    #header
      img(src="/statics/images/logo.png")
    #content.clearfix
      #nav_section_top
        ul.fist_level.clearfix
          li ABOUT US
          li PRODUCTS
            div.category
              ul.second_level
                each category,i in categorys
                  if(lg == "en")
                    li #{category.name_en}
                  else if(lg == 'es')
                    li #{category.name_es}
                  else
                    li #{category.name}

          li NEWS
          li SOLUTION
          li CONTACT US
      #banner
        img(src="/statics/images/2.jpg")
      #nav_section_left
        ul
          each category,i in categorys
            if(lg == "en")
              li #{category.name_en}
            else if(lg == 'es')
              li #{category.name_es}
            else
              li #{category.name}
      #main
        img(src="/statics/images/bq_products.png")
        .productList
          each product,i in products
            .item
              .bg_over
                img(src="http://47.89.186.41#{product.thumb}")
                if(lg == "en")
                  p #{product.name_en}
                else if(lg == "es")
                  p #{product.name_es}
                else
                  p #{product.name}


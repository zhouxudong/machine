extends layout

block content
    #page
        include common/header
        #content.clearfix
            include common/nav_top
            #banner
                img(src="/statics/images/banner2.jpg")
            include common/nav_left
            #main
                .productInfo.news
                    h3 新闻列表：
                    each news_item,i in news
                        .new_item.clearfix
                            a(href='/news/#{news_item.id}').fl #{news_item.title}
                            .fr #{news_item.ctime}

        include common/footer
    input(type='hidden' id="currLg" value="#{lg}")
    script(src="/statics/API.js")
    script(src="/statics/js/index.js")